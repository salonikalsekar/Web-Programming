<div class="row">
  <div class="col-sm-12">
    <form class="server-form" method="post">
	  <div class="form-group">
        <label for="text1">Enter a paragraph</label>
        <textarea class="form-control" id="text1" name="text1" placeholder="Enter a paragraph" rows="4"> </textarea>
      </div>
	  
	  <div class="form-group">
        <label for="string1">Enter a string</label>
        <input type="String2" class="form-control" id="string1" name="string1" placeholder="Enter a string" value="{{inputText}}">
      </div>
      <div class="form-group">
        <label for="numb1">Enter a number</label>
        <input type="number" class="form-control" id="numb1" name="numb1" placeholder="Enter a number" value="{{freq}}">
      </div>
      <div class="form-group">
        <label for="numb2">Enter a number</label>
        <input type="number" class="form-control" id="numb2" name="numb2" placeholder="Enter a number" value="{{wordcount}}">
      </div>
     
      {{#if error }}
      <div class="form-group">
        <div class="alert alert-danger">
          {{ error }}
        </div>
      </div>
      {{/if}}

      <div class="form-group">
        <button type="submit" class="btn btn-default">Submit</button>
      </div>

      {{#if result }}
      <div class="form-group">
        <div class="alert alert-success">
          The result is: {{ result }}
        </div>
      </div>
      {{/if}}
      
    </form>
  </div>
</div>